<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32A3FD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Alarm Sederhana"
        android:textColor="#E32416"
        android:textSize="24sp"
        android:textStyle="bold" />

    <AnalogClock
        android:id="@+id/analogClock"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/set_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/analogClock"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="31dp"
        android:text="No Alarm Set"
        android:textSize="30sp" />


    <Button
        android:id="@+id/button_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_alarm"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="ATUR ALARM"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_alarm"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="BATALKAN ALARM"
        android:textColor="#000000" />


</RelativeLayout>